<div class="text-center">
  <img src="../public/assets/img/bu.jpg" alt="Juicy Burger">
  <h1>Eat-Da-Burger!</h1>
</div>


<div class="row">
  <div class="container col-md-6">
    <ul class="list-group">
      {{#each burgers}}
      {{#unless devoured}}
      <div class="list-group-item">
        <p>
        {{burger_name}}
        </p>
        <button class="devourBurger" data-id="{{id}}">Devour It!</button>
      </div>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  

  <div class="container col-md-6">
    <ul class="list-group">
      {{#each burgers}}
      {{#if devoured}}
      <div class="list-group-item">
      <p>
        {{burger_name}}
      </p>
      </div>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<form class="create-form">
  <div class="form-group">
    <input type="text" id="input" name="burger_name">
  </div>
  <button type="submit">Add Burger</button>
</form>