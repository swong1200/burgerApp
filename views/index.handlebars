<h1>Eat-Da-Burger!</h1>

<div class="row">
<div class="container col-md-6">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{burger_name}}
      <button class="devourBurger" data-id="{{id}}" data-devour="{{devoured}}">Devour It!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="container col-md-6">
<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
      {{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<form class="create-form">
  <div class="form-group">
    <input type="text" id="input" name="burger_name">
  </div>
    <button type="submit">Add Burger</button>
</form>